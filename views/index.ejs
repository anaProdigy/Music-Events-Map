      <input class="event-input" type="date" id="end-date" name="end-date" placeholder="end date" required>
      <input class="event-input" type="number" id="latitude" name="latitude" readonly>
      <input class="event-input" type="number" id="longitude" name="longitude" readonly>
      <input class="event-input" type="text" id="event-link" name="event-link" placeholder="event link">
      <input class="event-input" type="text" id="venue" name="event-thumbnail" placeholder="add event image or flyer">
      <button class="add-event" type="submit">Add Event</button>
      <button class="cancel-event" type="button">Cancel</button>
